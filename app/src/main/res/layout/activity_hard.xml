<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.firetot.quizapptutorial.HardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:background="#2f3058"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:id="@+id/points"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#fff"
            android:id="@+id/name_ingame"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/header"
        android:background="#547cb9"
        android:padding="16dp"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/go_home"
            android:background="@drawable/home"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:id="@+id/questions"
            android:textSize="20sp"
            android:text="questions"/>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#39d685"
            android:id="@+id/skip"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKIP"
                android:textColor="#fff"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/nr_skip"
                android:layout_alignParentRight="true"
                android:textColor="#de0b0b"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/bottom"
        android:background="#2f3058"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:background="#1a9900"
            android:layout_margin="3dp"
            android:id="@+id/trueQ"
            android:src="@drawable/ic_action_true"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:id="@+id/falseQ"
            android:src="@drawable/ic_action_false"
            android:background="#d20505"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>

